<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Integral de Préstamos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/sidenav.css" />
    <link rel="stylesheet" href="~/paginationjs/pagination.css">
    <script src="https://kit.fontawesome.com/3d05e5b342.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.5.1/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.5.1/mapbox-gl.js"></script>
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.min.js"></script>
    <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.css" type="text/css">

</head>
<body id="body-pd" class="body-pd">

    <header class="header body-pd" id="header">
        <div class="header_toggle"> <i class='bx bx-x' id="header-toggle"></i> </div>
        <div class="header_img"> <img src="https://i.imgur.com/hczKIze.jpg" alt=""> </div>
    </header>
    <div class="l-navbar show" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo">
                    <span class="nav_logo-name">Sistema Integral de <br /> Préstamos</span>
                </a>
                <div class="nav_list" id="nav-list">

                </div>
            </div>
            <a href="#" class="nav_link">
                <i class='bx bx-log-out nav_icon'></i>
                <span class="nav_name">Cerrar sesión</span>
            </a>
        </nav>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.sheetjs.com/xlsx-latest/package/dist/xlsx.full.min.js"></script>
    <script src="~/lib/Chart.js/chart.min.js"></script>
    <script src="~/paginationjs/pagination.js"></script>
    <script src="~/js/Common/request.js"></script>
    <script src="~/js/sidenav.js"></script>
    <script src="~/js/Common/navDefiner.js"></script>
    @if (!string.IsNullOrEmpty(ViewData["Page"].ToString()))
    {
        @switch (ViewData["Page"].ToString())
        {
            case "Dashboard":
                <script src="~/js/Dashboard/index.js"></script>
                break;
            case "Users":
                <script src="~/js/Users/validations.js"></script>
                <script src="~/js/Users/index.js"></script>
                break;
            case "Roles":
                <script src="~/js/Roles/index.js"></script>
                break;
            case "Vehicles":
                <script src="~/js/Vehicle/validation.js"></script>
                <script src="~/js/Vehicle/index.js"></script>
                <script src="~/js/Vehicle/VehicleAssignment/validation.js"></script>
                <script src="~/js/Vehicle/VehicleAssignment/index.js"></script>
                break;
            case "Loan":
                <script src="~/js/Loan/validations.js"></script>
                <script src="~/js/Users/userSourceContainer.js"></script>
                <script src="~/js/Loan/index.js"></script>
                break;
            case "Pays":
                <script src="~/js/Pays/validations.js"></script>
                <script src="~/js/Loan/loanSourceContainer.js"></script>
                <script src="~/js/Pays/index.js"></script>
                break;
            case "Amortizations":
                <script src="~/js/Amortizations/validations.js"></script>
                <script src="~/js/Loan/loanSourceContainer.js"></script>
                <script src="~/js/Amortizations/index.js"></script>
                break;
        }
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
