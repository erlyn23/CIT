@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card shadow">
            <div class="text-center">
                <h3>Iniciar sesión</h3>
            </div>
            <hr>
            <form>
                <div class="form-group">
                    <input type="email" id="email" placeholder="Correo electrónico" class="form-control">
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Contraseña" id="password" class="form-control">
                </div>
                <div class="text-center">
                    <button type="button" id="signInBtn" class="btn btn-outline-success">Entrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

