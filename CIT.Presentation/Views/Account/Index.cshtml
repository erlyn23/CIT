@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card box-shadow p-4">
            <div class="text-center">
                <h3>Iniciar sesión</h3>
            </div>
            <hr>
            <form>
                <div class="form-group mb-2">
                    <input type="email" id="email" placeholder="Correo electrónico" class="form-control">
                </div>
                <div class="form-group mb-2">
                    <input type="password" placeholder="Contraseña" id="password" class="form-control">
                </div>
                <div class="text-center">
                    <button type="button" data-toggle="modal" data-target="#LoadingModal" id="signInBtn" class="btn btn-outline-success">Entrar</button>
                </div>
                <hr>
                <div class="text-center">
                    <p>¿No posees una cuenta? <a asp-controller="Account" asp-action="Register">Regístrate</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Partials/_LoadingModalPartial.cshtml")
@await Html.PartialAsync("~/Views/Partials/_ResultMessagesModalPartial.cshtml")

