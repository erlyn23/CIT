
@{
    ViewData["Title"] = "SIP - Usuarios";
    ViewData["Page"] = "Users";
    Layout = "~/Views/Shared/_SystemLayout.cshtml";
}


<div class="row mt-5 text-center">
    <div class="col-md-12">
        <h3>Configuración de usuarios</h3>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-12">
        <div class="card box-shadow shadow-sm">
            <div class="card-body">
                <div class="text-center">
                    <h3>Usuarios registrados</h3>
                </div>
                <div class="row">
                    <div class="col-md-5" id="loadingUsers">
                        <div class="spinner-grow text-dark" role="status">
                            <span class="sr-only"></span>
                        </div>
                        &nbsp;<span>Obteniendo datos, por favor espere</span>
                    </div>
                    <div class="col-md-5">
                        <div class="alert alert-danger d-none" role="alert" id="errorMessage">

                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <button type="button" id="openCreateUser" class="btn btn-success" data-toggle="modal" data-target="#CreteUserModal">
                            Crear nuevo usuario
                        </button>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h4><i class="fas fa-filter"></i>&nbsp;Filtros de búsqueda:</h4>
                                <br>
                                <form>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="filterField">Filtrar por:</label>
                                                <select id="filterField" class="form-control">
                                                    <option value="" disabled selected>Selecciona una opción...</option>
                                                    <option value="id">Id</option>
                                                    <option value="name">Nombre</option>
                                                    <option value="email">Correo</option>
                                                    <option value="identificationDocument">Documento de identificación</option>
                                                    <option value="role">Rol</option>
                                                    <option value="country">País</option>
                                                    <option value="city">Ciudad</option>
                                                    <option value="province">Provincia</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>&nbsp;</label>
                                                <input type="text" id="filterValue" class="form-control" placeholder="Búsqueda...">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-responsive" id="usersTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Rol</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="usersList">
                    </tbody>
                </table>
                <div id="paginator-container">

                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Partials/_ResultMessagesModalPartial.cshtml")
@await Html.PartialAsync("~/Views/Partials/Users/_CreateUserModalPartial.cshtml")
@await Html.PartialAsync("~/Views/Partials/Users/_DeleteConfirmModal.cshtml")
@await Html.PartialAsync("~/Views/Partials/Users/_UserDetailModalPartial.cshtml") 